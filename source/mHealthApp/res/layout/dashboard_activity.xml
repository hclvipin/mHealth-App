<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textSize="@dimen/tv_name" />

                    <TextView
                        android:id="@+id/tv_cloud_connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="3dp"
                        android:text="Connected to cloud portal"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/tv_cloud"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tv_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#11ff11"
                        android:textSize="@dimen/tv_registration"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/car_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="My Car Dashboard"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/tv_headings"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/tv_time"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_upload_counter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center_horizontal"
                        android:text="Data uploaded 0 Times"
                        android:textColor="#11ff11"
                        android:textSize="@dimen/tv_driving_at" />

                    <TextView
                        android:id="@+id/tv_offline_counter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center_horizontal"
                        android:text="Data Uploaded to cache 0 Times"
                        android:textColor="#11ff11"
                        android:textSize="@dimen/tv_driving_at" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="3dip"
                            android:text="Driving At : "
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_driving_at" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/RowTextColor"
                                android:textSize="@dimen/tv_driving_at" />
                        </LinearLayout>
                    </TableRow>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_box"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="1dp"
                            android:text="Vehicle Speed"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_vehicle_speed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Engine Speed"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_engine_speed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Longitude "
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_longitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Latitude"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_latitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_box"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Fuel Level"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_fuel_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Fuel Consumed"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_fuel_consumed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Odometer"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_odometer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="invisible" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Wiper Status"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_box"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="3dip"
                            android:text="Ignition Status"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_ignition_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Head Lamp Status"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_head_lamp_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Wiper Status"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:id="@+id/tv_wiper_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/tv_parameter_margin"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="3dip"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/RowTextColor"
                            android:textSize="@dimen/tv_parameters" />
                    </TableRow>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Vehicle Health Status"
                android:textColor="#ffffff"
                android:textSize="@dimen/tv_headings"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_parameter_margin"
                android:background="@drawable/rounded_box"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engine Status :"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/tv_status"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_engine_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/green2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Status"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/tv_status"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_battery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/green2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tyre Pressure"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/tv_status"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_tyre_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/green2" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
<!-- 
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="20dp"
                    android:src="@drawable/hcl" /> -->

                <TextView
                    android:id="@+id/crash_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/tv_crash"
                    android:textStyle="bold" />

          <!--       <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"
                    android:src="@drawable/ford_logo1" /> -->
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>